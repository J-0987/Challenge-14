//form to add comment
<div class="mb-3">
    <label for="comments" class="form-label">Comment:</label>
    <input type="text" class="form-control" id="commentInput" placeholder="comment here...">
</div>
<div class="col-auto">
    <button type="submit" class="btn btn-primary mb-3" id="commentButton">Post comment</button>
</div>

{{#each comments}}
    <div id="commentList">
        <p class="fs-5">{{this.comment}}</p>
        <p class="fs-6">Commented by {{this.user.email}} on {{this.comment.dateCreated}}</p>
        <button type="delete" class="btn btn-primary mb-3" id="delCommentBtn">Delete comment</button>
    </div>
{{/each}}

<script src="./js/commentScriptjs"></script>